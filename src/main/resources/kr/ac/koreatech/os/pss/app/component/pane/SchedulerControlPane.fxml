<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.*?>
<GridPane fx:controller="kr.ac.koreatech.os.pss.app.component.pane.SchedulerControlPane" maxHeight="-Infinity"
          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="490.0" prefWidth="240.0"
          stylesheets="@css/scheduler-control-pane.css" xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane id="title-container" GridPane.columnIndex="1" GridPane.halignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text id="title" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="스케줄러 시뮬레이터"
                      GridPane.halignment="CENTER"/>
            </children>
        </GridPane>
        <GridPane id="details-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="10.0" prefWidth="140.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="60.0" minWidth="10.0" prefWidth="60.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <FontIcon fx:id="flagLimitIcon" iconColor="WHITE" iconLiteral="fas-flag" iconSize="24"
                          GridPane.halignment="CENTER" GridPane.rowIndex="6"/>
                <FontIcon fx:id="queueLimitIcon" iconColor="WHITE" iconLiteral="fas-angle-double-right" iconSize="24"
                          GridPane.halignment="CENTER" GridPane.rowIndex="5"/>
                <FontIcon fill="#b57979" iconColor="WHITE" iconLiteral="fas-calendar-alt" iconSize="24"
                          GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
                <FontIcon id="timequantum" fx:id="timeQuantumIcon" fill="WHITE" iconColor="WHITE"
                          iconLiteral="fas-history" iconSize="24" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
                <JFXComboBox fx:id="scheduleMethodComboBox" promptText="   스케줄 기법" id="parameter-combo"
                             GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
                <JFXButton fx:id="scheduleMethodButton" onMouseClicked="#applyScheduleMethod" styleClass="apply-button"
                           text="적용" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
                <JFXButton fx:id="timeQuantumButton" onMouseClicked="#updateTimeQuantum" styleClass="apply-button"
                           text="적용" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
                <JFXButton fx:id="queueLimitButton" onMouseClicked="#updateQueueLimit" styleClass="apply-button"
                           text="적용" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5"/>
                <JFXButton fx:id="flagLimitButton" onMouseClicked="#updateFlagLimit" styleClass="apply-button" text="적용"
                           GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="6"/>
                <TextField id="rrparameter" fx:id="timeQuantumTextField" promptText="타임 퀀텀" styleClass="text-parameter"
                           GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <TextField id="queueparemeter" fx:id="queueLimitTextField" promptText="실행큐 작업 개수"
                           styleClass="text-parameter" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <TextField id="flagparameter" fx:id="flagLimitTextField" promptText="플래그 상한" styleClass="text-parameter"
                           GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <JFXButton id="start-button" fx:id="startButton" onMouseClicked="#startSchedule" text="시작"
                           GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="8">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                </JFXButton>
                <FontIcon fill="#b57979" iconColor="WHITE" iconLiteral="fas-cogs" iconSize="24"
                          GridPane.halignment="CENTER"/>
                <FontIcon fill="#b57979" iconColor="WHITE" iconLiteral="fas-cog" iconSize="24"
                          GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                <TextField id="rrparameter" fx:id="numPerformanceCoreTextField" promptText="성능 코어 개수"
                           styleClass="text-parameter" GridPane.columnIndex="1"/>
                <TextField id="rrparameter" fx:id="numEfficiencyCoreTextField" promptText="효율 코어 개수"
                           styleClass="text-parameter" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <JFXButton fx:id="numPerformanceCoreButton" onMouseClicked="#updateNumPerformanceCore"
                           styleClass="apply-button" text="적용" GridPane.columnIndex="2" GridPane.halignment="CENTER"/>
                <JFXButton fx:id="numEfficiencyCoreButton" onMouseClicked="#updateNumEfficiencyCore"
                           styleClass="apply-button" text="적용" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                           GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</GridPane>
